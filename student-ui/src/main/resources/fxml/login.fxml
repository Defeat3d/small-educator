<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>
<fx:root xmlns:fx="http://javafx.com/fxml/1" type="VBox" alignment="TOP_CENTER" fillWidth="false" maxHeight="-Infinity"
         maxWidth="-Infinity" minHeight="0.0"
         minWidth="0.0" xmlns="http://javafx.com/javafx/8.0.172-ea">
    <padding>
        <Insets bottom="5.0" left="5.0" right="5.0" top="5.0"/>
    </padding>
    <Label alignment="TOP_CENTER" style="-fx-border-color: black;" text="SMALL EDUCATOR">
        <font>
            <Font name="System Bold" size="22.0"/>
        </font>
        <graphic>
            <ImageView fitHeight="40.0" fitWidth="40.0" pickOnBounds="true" preserveRatio="true">
                <viewport>
                    <Rectangle2D/>
                </viewport>
                <Image url="@../images/neetbok.png"/>
            </ImageView>
        </graphic>
        <VBox.margin>
            <Insets bottom="5.0" left="5.0" right="5.0" top="5.0"/>
        </VBox.margin>
        <padding>
            <Insets bottom="5.0" left="5.0" right="5.0" top="5.0"/>
        </padding>
    </Label>
    <VBox alignment="CENTER_LEFT" fillWidth="false" spacing="5.0" style="-fx-border-color: black;">
        <VBox.margin>
            <Insets bottom="5.0" left="5.0" right="5.0" top="160.0"/>
        </VBox.margin>
        <padding>
            <Insets bottom="5.0" left="5.0" right="5.0" top="5.0"/>
        </padding>
        <Label text="Email"/>
        <TextField fx:id="emailField" promptText="Email"/>
        <Label text="Password"/>
        <PasswordField fx:id="passwordField" promptText="Password"/>
        <Button mnemonicParsing="false" text="Sign in" onAction="#login"/>
    </VBox>
</fx:root>
